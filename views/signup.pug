.title
  h4 Signup Page!
  p &quot;Enter your updated personal information.&quot;
.center
  h1 Signup!
  form(action ="/signup" method = 'POST' name='signupform')
    .inputbox
      input(type='alpha-numeric' name='username' required='required' onblur='valUsername(this, info1)')
      span User Name
    span#info1
    .inputbox
      input(type='email' name='email' required='required' onblur='valemail(this, info2)')
      span Email
    span#info2
    .inputbox
      input(type='password' name='password' required='required' onblur='valpassword(this, info3)')
      span Password
    span#info3
    .inputbox
      select#selectrole(name='selectrole' onblur='valSelectrole(this, info4)')
        option(value='Select') Select Role
        option(value='attendant') Sales Agent
        option(value='manager') Manager
        option(value='director') Director
    span#info4
    .inputbox
      select#branch(name='branch' onblur='valbranch(this,info5)')
        option(value='Select') Select Branch
        option(value='attendant') Maganjo
        option(value='attendant') Matuga
    span#info5
    .inputbox
      button.loginbutton(type='submit') Register
